rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for the superAdmin role
    function isSuperAdmin() {
      return request.auth.token.isSuperAdmin == true;
    }

    // Rules for the users collection
    match /users/{userId} {
      // Any authenticated user can read any user's profile.
      allow get: if request.auth != null;
      // Any authenticated user can see the list of users.
      allow list: if request.auth != null;
      // A user can update their own document, or a superAdmin can update any user document.
      allow write: if request.auth.uid == userId || isSuperAdmin();
    }

    // Rules for the templates collection
    match /templates/{templateId} {
        // Any authenticated user can read, create, update, and delete any template.
        allow read, write: if request.auth != null;
    }
  }
}
