{
  "name": "myapp",
  "description": "My Awesome Electron App",
  "author": "Your Name",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "./",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "vite build && electron .",
    "dist": "npm run build && electron-builder --verbose"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/lab": "^7.0.0-beta.17",
    "@mui/material": "^7.3.2",
    "firebase": "^12.2.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "moment": "^2.30.1",
    "node.js": "^0.0.1-security",
    "react": "^19.1.1",
    "react-big-calendar": "^1.19.4",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.1",
    "recharts": "^3.2.1",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.21",
    "globals": "^16.4.0",
    "vite": "^7.1.2"
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "My App",
    "files": [
      "dist/**/*",
      "electron.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office",
      "icon": "public/assets/elsipogtoglogo.png"
    },
    "win": {
      "target": "nsis",
      "icon": "public/assets/elsipogtoglogo.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/assets/elsipogtoglogo.png"
    }
  }
}
